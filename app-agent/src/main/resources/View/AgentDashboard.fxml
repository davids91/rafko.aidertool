<VBox fx:id="rootVBox" alignment="CENTER_LEFT" spacing="3.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rafko.aidertool.appagent.controller.AgentDashboardController">
